{
  "name": "menaget",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node src/server.ts",
    "start-dev": "nodemon src/server.ts",
    "build": "tsc && cp -r src/db/migrations dist/db/migrations",
    "buildCommand": "npm install --omit=dev && npm run build && npm run migrate",
    "serve": "node dist/server.js",
    "migrate:make": "knex --knexfile src/knexfile.ts migrate:make",
    "migrate": "knex --knexfile dist/knexfile.ts migrate:latest",
    "migrate:local": "knex --knexfile src/knexfile.ts migrate:latest",
    "migrate:rollback": "knex --knexfile src/knexfile.ts migrate:rollback",
    "seed:make": "knex --knexfile src/knexfile.ts seed:make",
    "seed": "knex --knexfile dist/knexfile.ts seed:run",
    "seed:local": "knex --knexfile src/knexfile.ts seed:run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "prepare": "if [ \"$NODE_ENV\" != \"production\" ]; then husky install; fi"
  },
  "author": "Jamiu Fawaz",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.19",
    "@types/node-cron": "^3.0.11",
    "ably": "^2.9.0",
    "awilix": "^12.0.5",
    "awilix-express": "^9.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-zod-api": "^23.4.1",
    "knex": "^3.1.0",
    "node-cron": "^4.0.5",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.25.6"
  },
  "devDependencies": {
    "@types/cors": "^2.8.18",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.5.3"
  }
}
